.address {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #eaeaee;
  padding-bottom: 110rpx;
  box-sizing: border-box;
}
.address .addcont {
  height: 100%;
}
.address .addcont .item {
  padding: 0 20rpx;
}
.address .addcont .item .list {
  position: relative;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #ffffff;
  background-color: white;
  width: 95%;
  margin: 0 auto;
  border-radius: 30rpx;
  margin-top: 10rpx;
  padding: 10rpx;
}
.address .addresslist {
  width: 100%;
  position: relative;
  transition: all 300ms ease;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.address .addresslist view:nth-child(1) {
  width: 100rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  align-self: flex-start;
}
.address .addresslist view:nth-child(1) .moren {
  width: 60rpx;
  height: 30rpx;
  border: 1rpx solid #b4282d;
  text-align: center;
  line-height: 30rpx;
  color: #b4282d;
  margin: 10rpx auto 0 auto;
}
.address .addresslist .info {
  padding: 0 20rpx;
  flex: 1;
}
.address .addresslist .info text:nth-child(2) {
  margin-top: 5rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.address .addresslist view:nth-child(3) {
  width: 50rpx;
  height: 50rpx;
  margin: 0 20rpx;
  background-size: 100% 100%;
}
.address .center {
  width: 248rpx;
  height: 248rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -80%, 0);
  background-size: 100% 100%;
}
.address .center text {
  position: absolute;
  bottom: -20rpx;
  left: 0;
  right: 0;
  text-align: center;
}
.address .bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx 30rpx;
  display: flex;
  justify-content: space-between;
  background: #fff;
}
.address .bottom view {
  width: 330rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border: 1rpx solid #B4282D;
  color: #B4282D;
}
.address .bottom view:nth-child(2) {
  border: 1rpx solid green;
  color: green;
}
