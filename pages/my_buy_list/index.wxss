.order_main .order_item {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
  color: #666;
  width: 100%;
}
.order_main .order_item .order_no_row {
  display: flex;
  padding: 10rpx 0;
  justify-content: space-between;
}
.order_main .order_item .order_price_row {
  display: flex;
  padding: 10rpx 0;
  justify-content: space-between;
}
.order_main .order_item .order_price_row .order_price_value {
  color: var(--themeColor);
  font-size: 32rpx;
}
.order_main .order_item .order_time_row {
  display: flex;
  padding: 10rpx 0;
  justify-content: space-between;
}
.order_main .order_item .every::-webkit-scrollbar {
  display: none;
}
.order_main .order_item .every {
  display: flex;
  overflow: scroll;
  scroll-behavior: auto;
}
.order_main .order_item .every .detail .content {
  border-radius: 40rpx;
  margin: 20rpx;
}
.order_main .order_item .every .detail .content .name {
  width: 250rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.order_main .order_item .every .detail .content image {
  height: 230rpx;
}
