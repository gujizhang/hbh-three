.order {
  overflow-x: hidden;
}
.order .seladdress {
  width: 100%;
  min-height: 166rpx;
  background-size: 62rpx 10rpx;
  margin-bottom: 20rpx;
  padding-top: 10rpx;
  text-align: center;
  line-height: 166rpx;
}
.order .address {
  padding: 50rpx 0 30rpx 0;
  margin-bottom: 20rpx;
}
.order .address .item {
  padding: 0 20rpx;
}
.order .address .item .addresslist {
  width: 100%;
  position: relative;
  transition: all 300ms ease;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.order .address .item .addresslist view:nth-child(1) {
  width: 100rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  align-self: flex-start;
}
.order .address .item .addresslist view:nth-child(1) .moren {
  width: 60rpx;
  height: 30rpx;
  border: 1rpx solid #b4282d;
  text-align: center;
  line-height: 30rpx;
  color: #b4282d;
  margin: 10rpx auto 0 auto;
}
.order .address .item .addresslist .info {
  padding: 0 20rpx;
  flex: 1;
}
.order .address .item .addresslist .info text:nth-child(2) {
  margin-top: 5rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.order .address .item .addresslist view:nth-child(3) {
  width: 50rpx;
  height: 50rpx;
  margin: 0 20rpx;
  background-size: 100% 100%;
}
.order .orderbox {
  padding: 0 30rpx;
  background: #ffffff;
}
.order .orderbox .item {
  padding: 30rpx 0;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #d9d9d9;
}
.order .orderbox .item:last-child {
  border: none;
}
.order .cartlist {
  background: #fff;
  margin-bottom: 110rpx;
  margin-top: 20rpx;
}
.order .cartlist .item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f4f4f4;
  position: relative;
}
.order .cartlist .item .con {
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: all 300ms ease;
}
.order .cartlist .item .con .left {
  display: flex;
  align-items: center;
  width: 80%;
}
.order .cartlist .item .con .left .image {
  height: 125rpx;
  width: 125rpx;
  display: block;
  background: #f4f4f4;
  margin-left: 20rpx;
}
.order .cartlist .item .con .left .image image {
  width: 100%;
  height: 100%;
}
.order .cartlist .item .con .left .info {
  width: 50%;
  padding: 20rpx;
}
.order .cartlist .item .con .left .info p {
  line-height: 40rpx;
}
.order .cartlist .item .con .right {
  padding-right: 50rpx;
}
.order .bottom {
  position: fixed;
  bottom: 0;
  height: 100rpx;
  width: 100%;
  display: flex;
  background: #fff;
  font-size: 32repx;
}
.order .bottom view:nth-child(1) {
  flex: 1;
  line-height: 100rpx;
  padding-left: 20rpx;
}
.order .bottom view:nth-child(2) {
  width: 200rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 29rpx;
  background: #28b46e;
  color: #fff;
}
