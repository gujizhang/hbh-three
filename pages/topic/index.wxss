.topic {
  padding: 30rpx;
}
.topic .list .na {
  background: #fff;
  text-align: center;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}
.topic .list .na .t-image {
  width: 100%;
  height: 415rpx;
  overflow: hidden;
}
.topic .list .na .t-image image {
  width: 100%;
  height: 100%;
}
.topic .list .na .info {
  border-radius: 30rpx;
  background-color: #f7f6b7;
}
.topic .list .na .info .ti {
  color: #47724f;
  font-size: 35rpx;
  font-weight: bolder;
  margin: 30rpx;
}
.topic .list .na .info .su {
  color: #999;
  font-size: 24rpx;
  margin: 16rpx;
  padding: 0 20rpx;
}
.topic .list .na .info .pr {
  color: #b4282d;
  font-size: 27rpx;
  margin: 20rpx;
}
